{
  "name": "react-typescript-template",
  "version": "1.0.0",
  "description": "React basic template for web apps with Typescript",
  "main": "./src/index.tsx",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve",
    "build": "cross-env NODE_ENV=production webpack",
    "build:dev": "cross-env NODE_ENV=development webpack",
    "lint-code": "tsc --noEmit && eslint . && prettier --check .",
    "lint-code:fix": "tsc --noEmit && eslint --fix . && prettier --write .",
    "lint-styles": "stylelint src/**/*.css",
    "lint-styles:fix": "stylelint --fix src/**/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodrigolira/react-typescript-template.git"
  },
  "keywords": [
    "react",
    "template",
    "boilerplate"
  ],
  "author": "Rodrigo Lira",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "eslint": "^7.32.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.4.5",
    "prettier": "^2.5.1",
    "react-refresh": "^0.11.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2"
  }
}
